<%= render "users/shared/logmenu" %>
<div id="page1" class="container">
	<p><h1 id="mine" class="text-center"><%= link_to 'Make something new!', new_list_path %></h1></p>
</div>
<br />
<div id="top-border" class="container">
</div>
<div id="page1" class="container table-responsive">
	<h1 id="mine">Grocery Lists</h1>
	<table class="table table-condensed table-hover">
		<thead>
			<tr>
				<th>Date</th>
				<th>Title</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @lists.each do |list| %>
				<tr>
					<td class="col-xs-3"><%= list.updated_at.localtime.strftime("%d/%m/%Y %H:%M") %></td>
					<td class="col-xs-7"><h4><%= link_to list.title, list, class: 'clickable-td' %></h4></td>
					<td class="col-xs-2">
					<%= link_to 'Edit', edit_list_path(list), class: 'btn btn-warning' %>
					<%= link_to 'Delete', list_path(list), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
	<div id="page-angle"><img src="assets/page_angle.png" align="right"></img>
	</div>
	</div>

</div>
