<h1>Hello, world!</h1>

<!-- <%= link_to 'Grocery lists', controller: 'lists' %> -->
<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<%= link_to 'New list', new_list_path, class: 'btn btn-default btn-lg btn-block' %>
		</div>
	</div>
</div>
<h1> Listing lists</h1>

<div class="container table-responsive">
	<table class="table table-condensed table-hover">
		<thead>
			<tr>
				<th>Name</th>
				<th>Content</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			<% @lists.each do |list| %>
				<tr>
					<td class="col-xs-3"><%= list.title  %></td>
					<td class="col-xs-7"><%= list.text %></td>
					<td class="col-xs-2"><%= link_to 'Show', list_path(list), class: 'btn btn-primary btn-xs' %>
					<%= link_to 'Edit', edit_list_path(list), class: 'btn btn-warning btn-xs' %>
					<%= link_to 'Delete', list_path(list), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
	</div>
	
</div>
		